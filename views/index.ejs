<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>URL SHRINKER</h1>
        <form action="/shortURLs" method="post" class="my-4 form-inline">
            <!-- <label for="fullURL" class="sr-only">URL</label> -->
            <input required type="url" placeholder="https://example.com" name="fullURL" id="fullURL" class="form-control col mr-2">
            <button class="btn btn-success" type="submit">Shrink</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% ShortURLs.forEach(function(shortURL) { %>
                    <tr>
                        <td>
                            <a href="<%= shortURL.full %>"><%= shortURL.full %></a>
                        </td>
                        <td>
                            <a href="<%= shortURL.short %>"><%= shortURL.short %></a>
                        </td>
                        <td><%= shortURL.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
